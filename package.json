{
  "name": "ezmaster",
  "version": "4.0.3",
  "description": "Administration of docker applications without any IT skills",
  "private": true,
  "scripts": {
    "lint": "eslint --ext=.js,.vue ./ezmaster-api/index.js ./ezmaster-api/routes/ ./ezmaster-api/middlewares/ ./test/ ./ezmaster-api/lib/ ./ezmaster-front/public/src/",
    "insertversion:docker": "sed -i \"s#\\(image: inistcnrs/ezmaster:\\)\\([\\.a-z0-9]\\+\\)\\(-[a-z]\\+\\)#\\1${npm_package_version}\\3#g\" docker-compose*.yml",
    "insertversion:index": "sed -i \"s#\\(version \\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" ezmaster-front/public/index.html ezmaster-api/public/index.html ezmaster-rp/index.html",
    "insertversion:package": "sed -i \"s#^\\(  \\\"version\\\": \\)\\(\\\"[\\.a-z0-9]\\+\\\"\\)#\\1\\\"${npm_package_version}\\\"#g\" ezmaster-front/package*.json ezmaster-api/package*.json",
    "preversion": "npm run lint",
    "version": "npm run insertversion:docker && npm run insertversion:index && npm run insertversion:package && git add ezmaster-front/public/index.html ezmaster-api/public/index.html ezmaster-rp/index.html ezmaster-api/package*.json ezmaster-front/package*.json docker-compose*.yml",
    "postversion": "git push && git push --tags",
    "precommit": "npm run lint",
    "postinstall": "cd ezmaster-api/ ; npm i --unsafe-perm ; cd ../ezmaster-front/ ; npm i --unsafe-perm"
  },
  "keywords": [
    "docker",
    "ihm",
    "gui"
  ],
  "contributors": [
    {
      "name": "St√©phane Gully",
      "url": "https://github.com/kerphi"
    },
    {
      "name": "Nicolas Thouvenin",
      "url": "https://github.com/touv"
    },
    {
      "name": "Nicolas Lamblin",
      "url": "https://github.com/nlamblin"
    }
  ],
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "eslint": "^3.7.1",
    "eslint-config-vue": "^2.0.1",
    "eslint-plugin-html": "^1.5.3",
    "eslint-plugin-vue": "^1.0.0",
    "husky": "^0.11.9"
  }
}
