{
  "name": "ezmaster",
  "version": "3.0.1",
  "description": "Administration of docker applications without any IT skills",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "node index.js",
    "start-debug": "npm-run-all --parallel watch-js watch-less start-nodemon",
    "start-nodemon": "nodemon -V index.js",
    "watch-js": "watch 'browserify -d public/src/main.js > public/dist/bundle.js && echo \"-> bundle.js written\"' ./public/src/",
    "watch-less": "watch 'lessc --source-map-map-inline --source-map-less-inline public/less/*.less > public/dist/bundle.css && echo \"-> bundle.css written\"' ./public/less/",
    "lint": "eslint --ext=.js,.vue ./routes/ ./middlewares/ ./test/ ./lib/ ./public/src/",
    "test": "mocha",
    "build": "npm run build-js && npm run build-css",
    "build-js": "browserify -d public/src/main.js -p [minifyify --no-map] > public/dist/bundle.js",
    "build-css": "lessc --clean-css='--compatibility=ie8 --advanced' public/less/*.less > public/dist/bundle.css",
    "insertversion": "sed -i \"s#\\(image: inistcnrs/ezmaster:\\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" docker-compose.yml && sed -i \"s#\\(version \\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" public/index.html",
    "preversion": "npm run lint",
    "version": "npm run insertversion && git add public/index.html docker-compose.yml",
    "postversion": "git push && git push --tags"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "keywords": [
    "docker",
    "ihm",
    "gui"
  ],
  "contributors": [
    {
      "name": "St√©phane Gully",
      "url": "https://github.com/kerphi"
    },
    {
      "name": "Nicolas Thouvenin",
      "url": "https://github.com/touv"
    },
    {
      "name": "Nicolas Lamblin",
      "url": "https://github.com/nlamblin"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.17.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-2": "^6.11.0",
    "babel-runtime": "^6.11.6",
    "babelify": "^7.3.0",
    "body-parser": "^1.15.2",
