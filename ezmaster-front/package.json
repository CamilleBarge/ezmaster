{
  "name": "ezmaster-front",
  "version": "4.2.0",
  "description": "ezmaster-front",
  "private": true,
  "scripts": {
    "prestart": "mkdir -p public/dist/",
    "start": "npm-run-all --parallel watch-js watch-less start-server",
    "start-server": "http-server -p 3000 --silent public/",
    "watch-js": "watch 'browserify -d public/src/main.js > public/dist/bundle.js && echo \"-> bundle.js written [$(date +%T)]\"' ./public/src/",
    "watch-less": "watch 'lessc public/less/*.less > public/dist/bundle.css && echo \"-> bundle.css written [$(date +%T)]\"' ./public/less/",
    "bower": "bower install",
    "build": "npm run build-js && npm run build-css",
    "build-js": "browserify -d public/src/main.js -p [minifyify --no-map] > public/dist/bundle.js",
    "build-css": "lessc --clean-css='--compatibility=ie8 --advanced' public/less/*.less > public/dist/bundle.css"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ],
    "vue": "vue/dist/vue.common"
  },
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.17.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-2": "^6.11.0",
    "babel-runtime": "^6.11.6",
    "babelify": "^7.3.0",
    "vee-validate": "^2.0.0-beta.15",
    "vue": "^2.1.3",
    "vue-infinite-scroll": "^2.0.0",
    "vue-resource": "^1.0.3",
    "vue-router": "^2.0.3",
    "vue-strap": "^1.0.11",
    "vueify": "^9.3.0",
    "vuex": "^2.0.0"
  },
  "devDependencies": {
    "bower": "^1.8.0",
    "browserify": "^13.1.1",
    "http-server": "^0.10.0",
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "minifyify": "^7.3.3",
    "npm-run-all": "^3.1.0",
    "watch": "^1.0.1"
  }
}
